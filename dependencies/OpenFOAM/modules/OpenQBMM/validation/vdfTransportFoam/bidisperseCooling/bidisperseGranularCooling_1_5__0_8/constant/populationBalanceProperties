FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      populationaBalanceProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

populationBalanceModel sizeVelocity;

sizeVelocityCoeffs
{
    odeCoeffs
    {
        solveOde on;

        ATol    1.0e-6;
        RTol    1.0e-3;
        fac     0.9;
        facMin  0.1;
        facMax  5.0;
        minLocalDt 1.0e-7;
    }

    collision  on;

    collisionKernel
    {
        collisionKernel Boltzmann;
        e           0.8;
        rhos        (3.375 1.0); // Correction to keep masses the same
    }

    diffusionModel
    {
        diffusionModel none;
    }
}

