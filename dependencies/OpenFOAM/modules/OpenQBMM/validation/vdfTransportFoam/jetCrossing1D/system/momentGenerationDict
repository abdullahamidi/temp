phases
(
    particles
);

boundaries
{
    inlet1
    {
        type    fixedValue;
        value   uniform 0;
    }
    inlet2
    {
        type    fixedValue;
        value   uniform 0;
    }
    defaultFaces
    {
        type    empty;
    }
    walls
    {
        type    zeroGradient;
    }
    outlet
    {
        type    zeroGradient;
    }
}

particles
{
    type                weightsAndAbscissae;
    weightDimension     [0 0 0 0 0 0 0];
    abscissaDimension0  [0 1 0 0 0 0 0];
    abscissaDimension   [0 1 -1 0 0 0 0];

    default
    {}
    inlet1
    {
        node0
        {
            weight  uniform 0.001;
            abscissae (1.0 1 0.5);
        }
    }
    inlet2
    {
        node0
        {
            weight  uniform 0.001;
            abscissae (10.0 -1 0.5);
        }
    }
}


