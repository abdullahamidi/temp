FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      populationaBalanceProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

populationBalanceModel univariate;

univariateCoeffs
{
    diffusionModel
    {
        diffusionModel  none;
    }

    aggregation off;
    aggregationKernel
    {
        aggregationKernel constant;
    }

    breakup off;
    breakupKernel
    {
        breakupKernel constant;
        Cb        Cb        [ 0 0 -1 0 0 0 0 ] 0.02;

        daughterDistribution
        {
            daughterDistribution symmetricFragmentation;
        }
    }

    growth on;
    growthModel
    {
        growthModel	    diffusionControlledGrowth;
        Cg              1.0;
    }

    nucleation off;
    nucleationModel
    {
        nucleationModel  none;
    }

    odeCoeffs
    {
        ATol    1.0e-8;
        RTol    1.0e-7;
        fac     0.9;
        facMin  0.5;
        facMax  2.0;
        minLocalDt 1.0e-5;
    }
}





