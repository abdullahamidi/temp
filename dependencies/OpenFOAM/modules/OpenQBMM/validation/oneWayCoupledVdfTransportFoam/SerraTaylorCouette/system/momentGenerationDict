FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      momentGenerationDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

phases
(
    populationBalance
);

boundaries
{
    inlet
    {
        type symmetry;
    }
    outlet
    {
        type zeroGradient;
    }
    outerWall
    {
        type zeroGradient;
    }
    innerWall
    {
        type zeroGradient;
    }
    wedge1
    {
        type wedge;
    }
    wedge2
    {
        type wedge;
    }
}

populationBalance
{
    type                weightsAndAbscissae;
    weightDimension     [0 0 0 0 0 0 0];
    abscissaDimension0  [0 1 0 0 0 0 0];
    abscissaDimension   [0 1 -1 0 0 0 0];

    default
    {
        node0
        {
            weight  uniform 2.5e-5;
            abscissae (2e-6 0 0 0);
        }
    }

}


