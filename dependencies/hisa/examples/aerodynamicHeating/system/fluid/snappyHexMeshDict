    {
        type triSurfaceMesh;
        name MeshRefinement;
    }

    "MeshRefinement003.stl"
    {
        type triSurfaceMesh;
        name MeshRefinement003;
    }

};

castellatedMeshControls
{
    maxLocalCells 100000;
    maxGlobalCells 2000000;
    minRefinementCells 0;
    nCellsBetweenLevels 3;

    features
    (
        {
            file "Cut_Geometry.eMesh";
            level 0;
        }
        {
            file "MeshRefinement.eMesh";
            level 0;
        }

    );

    refinementSurfaces
    {
        Cut_Geometry
        {
            level (0 0);
        }

        MeshRefinement
        {
            level (4 4);
            faceZone MeshRefinement;
        }

    }

    resolveFeatureAngle 30;

    refinementRegions
    {
        MeshRefinement003
        {
            mode inside;
            levels ((1 1));
        }

    }

    locationInMesh (0.1475 0.1132 0.08598);
    allowFreeStandingZoneFaces true;
}

