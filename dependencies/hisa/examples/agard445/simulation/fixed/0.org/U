FoamFile
{
    version         2.0;
    format          ascii;
    class           volVectorField;
    object          U;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "include/freestreamConditions"

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform $U;

boundaryField
{
    "(farfield)"
    {
        type            characteristicFarfieldVelocity;
        #include        "include/freestreamConditions"
        value           $internalField;
    }
    symmetry
    {
        type            slip;
    }
    "(wing)"
    {
        type            slip;
        value           uniform (0 0 0);
    }

    #include "include/redistributeHelper"

}


