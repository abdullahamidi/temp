FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    location    "0.01";
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    farfield
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    symmetry
    {
        type            slip;
    }
    wing
    {
        type            modalMotion;
        modalFunctionObject modalMotion;
        #include        "../constant/modal/modeShapes"
        value           uniform (0 0 0);
    }

    #include "include/redistributeHelper"

    "procBoundary.*"
    {
        type            processor;
        value           $internalField;
    }
}
